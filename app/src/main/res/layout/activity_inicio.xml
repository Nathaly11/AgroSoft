<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_fondo"
    tools:context="com.example.nathaly.agrosoft3.Inicio">

    <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="540dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-15dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignTop="@+id/btncomunidad"
            android:text="Contamos con asociados, que al igual que tu están buscando alternativas para el manejo correcto de sus cultivos, únete a nuestra comunidad ahora."
            android:textAlignment="center"
            android:textStyle="italic"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btncultivo"
            android:layout_below="@+id/btncultivo"
            android:text="Cultivos"
            android:textColor="?attr/actionModeSplitBackground"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/button"
            android:text="Insumos"
            android:textColor="?attr/actionModeSplitBackground"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button2"
            android:layout_below="@+id/button2"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/textView5"
            android:text="Noticias"
            android:textColor="?attr/actionModeSplitBackground"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="21dp"
            android:lineSpacingExtra="12sp"
            android:text="Mis acciones"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="?android:attr/statusBarColor"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="28dp"
            android:lineSpacingExtra="12sp"
            android:text="¿Quiénes somos?"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="?android:attr/statusBarColor"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btncultivos"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/clima" />

        <Button
            android:id="@+id/btncultivo"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_alignTop="@+id/btncultivos"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/textView4"
            android:background="@drawable/cutivo"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_alignBottom="@+id/btncultivo"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/btncultivo"
            android:background="@drawable/buscar" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_above="@+id/textView5"
            android:layout_toEndOf="@+id/textView8"
            android:background="@drawable/notielotes" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:background="@drawable/buscar"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_toStartOf="@+id/button2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btncultivos"
            android:layout_below="@+id/btncultivos"
            android:text="Clima"
            android:textColor="?attr/actionModeSplitBackground"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="32dp"
            android:background="@drawable/agrosoft" />

        <Button
            android:id="@+id/btncomunidad"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_alignEnd="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="30dp"
            android:background="@drawable/asociados" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btncultivo"
            android:layout_alignTop="@+id/button3"
            android:text="Esta es una iniciativa de la cooperativa, para brindarte asesorías en tiempo real haciendo uso de las tecnologias que se desarrollan en el mercado"
            android:textAlignment="center"
            android:textStyle="italic"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
