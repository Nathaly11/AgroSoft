<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_fondo"
    tools:context="com.example.nathaly.agrosoft3.cultivos">

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="511dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="130dp"
            android:layout_marginTop="39dp"
            android:contentDescription=""
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/cutivo"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnguardar"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Guardar"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            tools:background="@drawable/gradient"
            tools:ignore="HardcodedText"
            tools:shadowDx="5dp"
            android:layout_marginBottom="92dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/textView" />

        <Button
            android:id="@+id/btnmostrar"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:text="@string/mostrar"
            android:textColor="@android:color/background_light"
            android:textColorLink="@android:color/background_light"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_alignBaseline="@+id/btnguardar"
            android:layout_alignBottom="@+id/btnguardar"
            android:layout_toEndOf="@+id/btnguardar" />

        <EditText
            android:id="@+id/txtcultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnguardar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:ems="10"
            android:hint="ingrese_el_cultivo..."
            android:inputType="textPersonName"
            android:textColor="?attr/actionMenuTextColor"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="12sp"
            android:text="Agrega tus cultivos"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="?android:attr/statusBarColor"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
